<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
  <nav>
    <%- include('./partials/navbar') %> 
  </nav>
  
  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% if (locals.blog) { %>
        <% blog.forEach(blog => { %>
          <div class="col">
            <div class="card">
              <img src="/images/<%= blog.coverImageUrl %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text" style="max-height: 80px; overflow: hidden;"><%= blog.body %></p>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
