<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
  <nav>
    <%- include('./partials/navbar') %> 
  </nav>
  
  <div class="container d-flex flex-wrap">
    <% if (locals.blog) { %>
      <% blog.forEach(blog => { %>
        <div class="card col mb-4" style="max-height: 100px; margin: 0px 10px;">
          <img src="/images/<%= blog.coverImageUrl %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text" style="max-height: 20px; overflow: hidden;"><%= blog.body %></p>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
