<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <nav>
        <%- include('./partials/navbar') %> 
    </nav>

    <div class="container mt-4">
        <% if (locals.blog) { %>
            <h1 class="mb-4"><%= blog.title %></h1>
            <img src="/images/<%= blog.coverImageUrl %>" class="img-fluid mb-4" alt="<%= blog.title %>" style="width: 500px;">
            <div class="card">
                <div class="card-body">
                    <pre class="card-text"><%= blog.body %></pre>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
