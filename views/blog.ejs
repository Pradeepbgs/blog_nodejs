<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <nav>
        <%- include('./partials/navbar') %> 
    </nav>

    <div class="container mt-4">
        <% if (locals.blog) { %>
            <h1 class="mb-4"><%= blog.title %></h1>
            <img src="/images/<%= blog.coverImageUrl %>" class="img-fluid mb-4" alt="<%= blog.title %>" style="width: 500px;">
            <div class="card">
                <div class="card-body" style="background-color: rgb(206, 200, 200);">
                    <pre class="card-text"><%= blog.body %></pre>
                </div>
            </div>
        <% } %>
    </div>
    <div class="container mt-4">
        <% if(locals.blog.createdBy){ %>
            <p> createdBy: <a href=""><%= blog.createdBy.name %></a></p>
        <% } %>
    </div>

    <div class="container mt-4" >
        <%= locals.comment.length %> comments
        <% if(locals.user){ %>
            <form action="/comment/<%=blog._id  %>" method="post">
                <textarea name="content" cols="30" rows=""></textarea>
                <button type="submit">comment</button>
            </form>
       <% } %>
    </div>

    <div class="container mt-4">
        <% comment.forEach((comment, index) => { %>
            <div>
                User :  <a href="#">'-' <%= comment.createdBy.name %></a>
                 <p><%= comment.content %> </p>
            </div>
       <% }) %>
    </div>

    <div>
        <form action="/delete/<%= blog._id %>" method="post">
            <button type="submit">delete</button>
        </form>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
